---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import SiteHead from "../components/SiteHead.astro";

interface Props {
  title: string;
  description: string;
  thumbnail: string;
  publishDate: string;
  modifiedDate: string;
}

const { title, description, thumbnail, publishDate, modifiedDate } =
  Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": Astro.url,
  },
  headline: title,
  description: description,
  image: Astro.site + thumbnail,
  author: {
    "@type": "Person",
    name: "William Hallin",
    url: "https://hallin.media/",
  },
  publisher: {
    "@type": "Organization",
    name: "HallinMedia",
    logo: {
      "@type": "ImageObject",
      url: "https://hallin.media/william.png",
    },
  },
  datePublished: publishDate,
  dateModified: modifiedDate,
};
---

<!doctype html>
<html lang=`${Astro.currentLocale}`>
  <head>
    <SiteHead title=`${title} - Portfolio` description={description} />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body
    class="m-auto max-w-[700px] bg-stone-50 p-6 text-stone-900 selection:bg-red-500"
  >
    <Navbar />
    <slot />
    <Footer />

    <script>
      import { gsap } from "gsap";
      window.gsap = gsap;
    </script>
  </body>
</html>
