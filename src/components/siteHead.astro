---
import { ViewTransitions } from "astro:transitions";

interface Props {
  description: string;
}

const { description } = Astro.props;
---

<!-- Basics -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="canonical" href={Astro.url} />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="description" content={description} />
<meta itemprop="description" content={description} />
<meta property="og:description" content={description} />
<meta property="twitter:description" content={description} />

<!-- Metadata -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="HallinMedia" />
<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:site" content="HallinMedia" />

<!-- Favicon -->
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/favicon/apple-touch-icon.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="/favicon/favicon-32x32.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="/favicon/favicon-16x16.png"
/>
<link rel="manifest" href="/favicon/site.webmanifest" />
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#ff3030" />
<link rel="shortcut icon" href="/favicon/favicon.ico" />
<meta name="apple-mobile-web-app-title" content="HallinMedia" />
<meta name="application-name" content="HallinMedia" />
<meta name="msapplication-TileColor" content="#b91d47" />
<meta name="msapplication-config" content="/favicon/browserconfig.xml" />
<meta name="theme-color" content="#ff3030" />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.bunny.net" />
<link
  href="https://fonts.bunny.net/css?family=dm-sans:400,500,700|dm-serif-display:400,400i"
  rel="stylesheet"
/>

<!-- Transitions -->
<ViewTransitions />
