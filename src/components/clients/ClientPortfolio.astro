---
import IconPhSparkleDuotone from "../icons/PhSparkleDuotone.astro";
import PortfolioCard from "../portfolio/PortfolioCard.astro";

const translations = {
  en: {
    related_works: "Related Works",
  },
  sv: {
    related_works: "Relaterade arbeten",
  },
};

const { posts, currentLocale } = Astro.props;
---

<article class="flex flex-col gap-8">
  <header class="flex items-center justify-between">
    <h2 class="text-3xl font-light text-stone-900 italic" id="related-works-heading">
      {translations[Astro.currentLocale].related_works}
    </h2>
    <IconPhSparkleDuotone class="h-8 w-8 text-[var(--dominant-color)]" aria-hidden="true" />
  </header>
  <section class="grid gap-4 sm:grid-cols-2" aria-labelledby="related-works-heading">
    {posts.map((post) => <PortfolioCard post={post} currentLocale={currentLocale} />)}
  </section>
</article>
