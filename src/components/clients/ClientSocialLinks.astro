---
const translations = {
  en: {
    social_media: "Social Media",
    twitter_label: "Twitter / X (opens in new tab)",
    linkedin_label: "LinkedIn (opens in new tab)",
    instagram_label: "Instagram (opens in new tab)",
    facebook_label: "Facebook (opens in new tab)",
  },
  sv: {
    social_media: "Sociala medier",
    twitter_label: "Twitter / X (öppnas i ny flik)",
    linkedin_label: "LinkedIn (öppnas i ny flik)",
    instagram_label: "Instagram (öppnas i ny flik)",
    facebook_label: "Facebook (öppnas i ny flik)",
  },
};

const { clientId, socialLinks } = Astro.props;
---

<article aria-labelledby="social-media-heading">
  <header>
    <h3 id="social-media-heading" class="mb-2 font-serif text-2xl font-light text-stone-900 italic">
      {translations[Astro.currentLocale].social_media}
    </h3>
  </header>
  <section>
    <nav aria-label="Social media links">
      <ul class="flex flex-wrap gap-4 text-sm text-stone-700">
        {
          socialLinks.twitter && (
            <li>
              <a
                href={socialLinks.twitter}
                aria-label={translations[Astro.currentLocale].twitter_label}
                data-umami-event={`client_${clientId}_twitter`}
                data-umami-event-url={socialLinks.twitter}
                data-umami-event-origin={Astro.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 underline decoration-stone-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-stone-300 selection:text-stone-700 hover:bg-stone-500 hover:text-stone-100 hover:no-underline active:bg-stone-500 active:text-stone-100 active:no-underline active:opacity-50"
              >
                Twitter / X
              </a>
            </li>
          )
        }
        {
          socialLinks.linkedin && (
            <li>
              <a
                href={socialLinks.linkedin}
                aria-label={translations[Astro.currentLocale].linkedin_label}
                data-umami-event={`client_${clientId}_linkedin`}
                data-umami-event-url={socialLinks.linkedin}
                data-umami-event-origin={Astro.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 underline decoration-blue-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-blue-300 selection:text-blue-700 hover:bg-blue-500 hover:text-blue-100 hover:no-underline active:bg-blue-500 active:text-blue-100 active:no-underline active:opacity-50"
              >
                LinkedIn
              </a>
            </li>
          )
        }
        {
          socialLinks.instagram && (
            <li>
              <a
                href={socialLinks.instagram}
                aria-label={translations[Astro.currentLocale].instagram_label}
                data-umami-event={`client_${clientId}_instagram`}
                data-umami-event-url={socialLinks.instagram}
                data-umami-event-origin={Astro.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 underline decoration-pink-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-pink-300 selection:text-pink-700 hover:bg-pink-500 hover:text-pink-100 hover:no-underline active:bg-pink-500 active:text-pink-100 active:no-underline active:opacity-50"
              >
                Instagram
              </a>
            </li>
          )
        }
        {
          socialLinks.facebook && (
            <li>
              <a
                href={socialLinks.facebook}
                aria-label={translations[Astro.currentLocale].facebook_label}
                data-umami-event={`client_${clientId}_facebook`}
                data-umami-event-url={socialLinks.facebook}
                data-umami-event-origin={Astro.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 underline decoration-sky-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-sky-300 selection:text-sky-700 hover:bg-sky-500 hover:text-sky-100 hover:no-underline active:bg-sky-500 active:text-sky-100 active:no-underline active:opacity-50"
              >
                Facebook
              </a>
            </li>
          )
        }
      </ul>
    </nav>
  </section>
</article>
