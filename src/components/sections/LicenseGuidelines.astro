const locale = Astro.currentLocale === "en" || Astro.currentLocale === "sv" ? Astro.currentLocale : "en";
---

<article class="space-y-4" aria-labelledby="guidelines-heading">
  <h2 id="guidelines-heading" class="relative font-serif text-lg text-stone-700 dark:text-stone-100">
    <span class="relative z-10 inline-flex flex-col gap-2 bg-amber-50 pr-4 dark:bg-stone-900">
      {translations[locale].heading}
    </span>
    <span class="absolute top-1/2 right-0 left-0 -z-0 h-px bg-stone-200 dark:bg-stone-700" aria-hidden="true"></span>
  </h2>
  <section
    class="rounded-lg border border-stone-200 bg-amber-50 p-6 dark:border-stone-700 dark:bg-stone-800"
    aria-labelledby="credits-heading"
  >
    <div class="flex items-center gap-2">
      <Icon name="ph:info-duotone" class="h-6 w-6 flex-shrink-0 text-red-500" aria-hidden="true" />
      <h3 id="credits-heading" class="font-serif font-medium text-stone-700 dark:text-stone-100">
        {translations[locale].credits.title}
      </h3>
    </div>
    <p class="mt-3 font-serif text-stone-500 dark:text-stone-400">
      {translations[locale].credits.description}
      <a
        href={getRelativeLocaleUrl(locale, "legal/credit-guidelines")}
        class="inline-block text-red-500 underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-100 active:opacity-50"
        >{translations[locale].credits.link}</a
      >.
    </p>
  </section>
  <section
    class="rounded-lg border border-stone-200 bg-amber-50 p-6 dark:border-stone-700 dark:bg-stone-800"
    aria-labelledby="prohibited-use-heading"
  >
    <div class="flex items-center gap-2">
      <Icon name="ph:prohibit-duotone" class="h-6 w-6 flex-shrink-0 text-red-500" aria-hidden="true" />
      <h3 id="prohibited-use-heading" class="font-serif font-medium text-stone-700 dark:text-stone-100">
        {translations[locale].prohibitedUse.title}
      </h3>
    </div>
    <p class="mt-3 font-serif text-stone-500 dark:text-stone-400">
      {translations[locale].prohibitedUse.description}
    </p>
    <div class="mt-4 grid gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:pencil-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">{translations[locale].contentIntegrity.title}</h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].contentIntegrity.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:handshake-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].licensingViolations.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].licensingViolations.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:flag-banner-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">{translations[locale].usageRestrictions.title}</h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].usageRestrictions.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:trademark-registered-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].intellectualProperty.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].intellectualProperty.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>
    <p class="mt-4 font-serif text-xs text-stone-500 dark:text-stone-400">
      {translations[locale].legalNote}
    </p>
  </section>
  <section
    class="rounded-lg border border-stone-200 bg-amber-50 p-6 dark:border-stone-700 dark:bg-stone-800"
    aria-labelledby="personal-depictions-heading"
  >
    <div class="flex items-center gap-2">
      <Icon name="ph:user-duotone" class="h-6 w-6 flex-shrink-0 text-red-500" aria-hidden="true" />
      <h3 id="personal-depictions-heading" class="font-serif font-medium text-stone-700 dark:text-stone-100">
        {translations[locale].personalDepictions.title}
      </h3>
    </div>
    <p class="mt-3 font-serif text-stone-500 dark:text-stone-400">
      {translations[locale].personalDepictions.description}
    </p>
    <div class="mt-4 grid gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:identification-card-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].personalDepictions.editorial.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].personalDepictions.editorial.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:storefront-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].personalDepictions.commercial.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].personalDepictions.commercial.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>
    <p class="mt-4 font-serif text-xs text-stone-500 dark:text-stone-400">
      <a
        href={getRelativeLocaleUrl(locale, "contact")}
        class="inline-block text-red-500 underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-100 active:opacity-50"
        >{translations[locale].personalDepictions.contact}</a
      >{" "}
      {translations[locale].personalDepictions.note}
    </p>
  </section>
  <section
    class="rounded-lg border border-stone-200 bg-amber-50 p-6 dark:border-stone-700 dark:bg-stone-800"
    aria-labelledby="quality-assurance-heading"
  >
    <div class="flex items-center gap-2">
      <Icon name="ph:image-duotone" class="h-6 w-6 flex-shrink-0 text-red-500" aria-hidden="true" />
      <h3 id="quality-assurance-heading" class="font-serif font-medium text-stone-700 dark:text-stone-100">
        {translations[locale].qualityAssurance.title}
      </h3>
    </div>
    <p class="mt-3 font-serif text-stone-500 dark:text-stone-400">
      {translations[locale].qualityAssurance.description}
    </p>
    <div class="mt-4 grid gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:ruler-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].qualityAssurance.technical.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].qualityAssurance.technical.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <Icon name="ph:paint-brush-duotone" class="h-5 w-5 text-red-500" aria-hidden="true" />
          <h4 class="font-medium text-stone-700 dark:text-stone-200">
            {translations[locale].qualityAssurance.visual.title}
          </h4>
        </div>
        <ul class="ml-7 list-disc space-y-1 text-sm text-stone-500 dark:text-stone-400">
          {translations[locale].qualityAssurance.visual.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>
    <p class="mt-4 font-serif text-xs text-stone-500 dark:text-stone-400">
      {translations[locale].qualityAssurance.note}{" "}
      <a
        href={getRelativeLocaleUrl(locale, "contact")}
        class="inline-block text-red-500 underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-100 active:opacity-50"
        >{translations[locale].qualityAssurance.contact}</a
      >{" "}
      {translations[locale].qualityAssurance.additionalNote}
    </p>
  </section>
</article>
