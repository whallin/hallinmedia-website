      items: ["Changing content without permission", "Removing file information", "Changing or removing watermarks"],
    },
    licensingViolations: {
      title: "Licence Violations",
      items: ["Selling licensed content", "Giving rights to others", "Transferring your usage rights"],
    },
    usageRestrictions: {
      title: "Usage Limits",
      items: ["Using outside your licensed area", "Using after licence expires", "Using without a valid licence"],
    },
    intellectualProperty: {
      title: "Trademark Issues",
      items: ["Using in trademarks", "Adding to logos", "Suggesting a partnership we don't have"],
    },
    legalNote:
      "Breaking these rules may end your licence without refund. HallinMedia may take legal action for copyright violations.",
    personalDepictions: {
      title: "Images of People",
      description: "For photos with identifiable people, different permissions apply:",
      editorial: {
        title: "News & Education",
        items: ["News reporting", "Informational content", "Educational materials"],
      },
      commercial: {
        title: "Commercial Use",
        items: ["Needs signed model releases", "Has time limits", "Restricted to specific uses"],
      },
      contact: "Contact William Hallin",
      note: "to check model release status before publishing images with people.",
