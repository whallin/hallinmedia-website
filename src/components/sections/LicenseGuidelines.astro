      items: ["Försäljning av licensierat material", "Vidarebefordran av rättigheter", "Överföring av användningsrätt"],
    },
    usageRestrictions: {
      title: "Användningsgränser",
      items: ["Användning utanför licensområdet", "Användning efter licensens slut", "Användning utan giltig licens"],
