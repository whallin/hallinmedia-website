---
import { Picture } from "astro:assets";
import Img1 from "../../assets/images/landing-photo-grid/1.jpg";
import Img10 from "../../assets/images/landing-photo-grid/10.jpg";
import Img2 from "../../assets/images/landing-photo-grid/2.jpg";
import Img3 from "../../assets/images/landing-photo-grid/3.jpg";
import Img4 from "../../assets/images/landing-photo-grid/4.jpg";
import Img5 from "../../assets/images/landing-photo-grid/5.jpg";
import Img6 from "../../assets/images/landing-photo-grid/6.jpg";
import Img7 from "../../assets/images/landing-photo-grid/7.jpg";
import Img8 from "../../assets/images/landing-photo-grid/8.jpg";
import Img9 from "../../assets/images/landing-photo-grid/9.jpg";

const images = [
  {
    src: Img1,
    alt: {
      en: "Swedish singer, Cimberly Wanyonyi",
      sv: "Svensk sångerska, Cimberly Wanyonyi",
    },
    specs: "ISO 1250, 1/100s, f/5.6",
    hoverColor: "#777777",
    colSpan: "sm:col-span-2",
  },
  {
    src: Img2,
    alt: {
      en: "Employee of the Swedish government agency, Diskrimineringsombudsmannen",
      sv: "Anställd på den svenska myndigheten Diskrimineringsombudsmannen",
    },
    specs: "ISO 1250, 1/80s, f/6.3",
    hoverColor: "#c37b2f",
    colSpan: "sm:col-span-1",
  },
  {
    src: Img3,
    alt: {
      en: "A young cinematographer, Tim Svanborg",
      sv: "En ung filmfotograf, Tim Svanborg",
    },
    specs: "ISO 6400, 1/1250s, f/5.6",
    hoverColor: "#d86640",
    colSpan: "",
  },
  {
    src: Img4,
    alt: {
      en: "A lead singer at the Swedish concert, Attentatfest Umeå",
      sv: "En sångerska på den svenska konserten, Attentatfest Umeå",
    },
    specs: "ISO 12800, 1/320s, f/5.6",
    hoverColor: "#1f221a",
    colSpan: "sm:col-span-2",
  },
  {
    src: Img5,
    alt: {
      en: "Skellefteå river from the city center",
      sv: "Skellefteå älv från stadens centrum",
    },
    specs: "ISO 640, 1/50s, f/5.6",
    hoverColor: "#a31e27",
    colSpan: "sm:col-span-3",
  },
  {
    src: Img6,
    alt: {
      en: "People dancing at the nightclub Cinco",
      sv: "Människor som dansar på nattklubben Cinco",
    },
    specs: "ISO 25000, 1/125s, f/4.0",
    hoverColor: "#005afe",
    colSpan: "",
  },
  {
    src: Img7,
    alt: {
      en: "A man at a stall on Skellefteå square",
      sv: "En man vid ett stånd på Skellefteås torg",
    },
    specs: "ISO 500, 1/100s, f/5.0",
    hoverColor: "#c05629",
    colSpan: "sm:col-span-2",
  },
  {
    src: Img8,
    alt: {
      en: "Description for image 10",
      sv: "Beskrivning för bild 10",
    },
    specs: "ISO 100, 1/6s, f/22.0",
    hoverColor: "#674ea7",
    colSpan: "sm:col-span-2",
  },
  {
    src: Img9,
    alt: {
      en: "Skellefteå skyline from Sara Kulturhus",
      sv: "Skellefteås horisont från Sara Kulturhus",
    },
    specs: "ISO 1250, 1/160s, f/5.0",
    hoverColor: "#cc0000",
    colSpan: "",
  },
  {
    src: Img10,
    alt: {
      en: "The skyline of Härnösand from Vårdkasberget",
      sv: "Härnösands horisont från Vårdkasberget",
    },
    specs: "ISO 100, 1/320s, f/4.0",
    hoverColor: "#c8d0eb",
    colSpan: "sm:col-span-3",
  },
];
---

<figure class="grid gap-2 sm:grid-cols-3">
  {
    images.map((image) => (
      <figure
        class={`group ${image.colSpan} transition hover:-translate-y-1 active:-translate-y-1`}
      >
        <div class="relative h-72 w-full" style={`--border-color: ${image.hoverColor}`}>
          <Picture
            src={image.src}
            alt={image.alt[Astro.currentLocale]}
            widths={[320, 480, 768]}
            formats={["avif", "webp", "jpeg"]}
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
            class="h-full w-full rounded-lg border-2 border-stone-300 object-cover transition select-none group-hover:border-[var(--border-color)] group-hover:drop-shadow-lg group-active:border-[var(--border-color)] group-active:drop-shadow-lg"
          />
          <figcaption class="absolute bottom-4 left-4 z-10 rounded-full border border-stone-500 bg-amber-50 px-2 py-1 text-xs font-light text-stone-700 transition group-hover:border-[var(--border-color)] group-hover:text-[var(--border-color)] group-active:border-[var(--border-color)] group-active:text-[var(--border-color)] selection:bg-[var(--border-color)] selection:text-[color-mix(in_oklab,var(--border-color),white_70%)]">
            {image.specs}
          </figcaption>
        </div>
      </figure>
    ))
  }
</figure>
