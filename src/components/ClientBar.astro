---
import { Picture } from "astro:assets";
import Logo24vision from "../assets/clients/24vision.svg";
import LogoBrannbollsyran from "../assets/clients/brannbollsyran.svg";
import LogoExtenseIT from "../assets/clients/extenseit.svg";
import LogoLastbilsstation from "../assets/clients/lastbilsstation.svg";
import LogoNolia from "../assets/clients/nolia.svg";
import LogoNorraSkog from "../assets/clients/norraskog.svg";
import LogoProducenterna from "../assets/clients/producenterna.svg";
import LogoTrastockfestivalen from "../assets/clients/trastockfestivalen.svg";
---

<section
  id="clients"
  aria-labelledby="clients-heading"
  class="grid select-none grid-cols-2 items-center justify-items-center gap-6 grayscale sm:gap-12 md:grid-cols-4"
>
  <h2 id="clients-heading" class="sr-only">Our Clients</h2>

  <a
    href="https://www.brannbollsyran.com/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="brannbollsyran"
    data-ga4-event="client_click"
    data-ga4-client="brannbollsyran"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Brännbollsyran's website (opens in new tab)"
  >
    <Picture
      src={LogoBrannbollsyran}
      alt=""
      id="clientLogo1"
      height={42}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://www.trastockfestivalen.se/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="trastockfestivalen"
    data-ga4-event="client_click"
    data-ga4-client="trastockfestivalen"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Trästockfestivalen's website (opens in new tab)"
  >
    <Picture
      src={LogoTrastockfestivalen}
      alt=""
      id="clientLogo2"
      height={32}
      class="opacity-0 invert"
      role="img"
    />
  </a>
  <a
    href="https://www.nolia.se/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="nolia"
    data-ga4-event="client_click"
    data-ga4-client="nolia"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Nolia's website (opens in new tab)"
  >
    <Picture
      src={LogoNolia}
      alt=""
      id="clientLogo3"
      height={24}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://www.norraskog.se/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="norraskog"
    data-ga4-event="client_click"
    data-ga4-client="norraskog"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Norra Skog's website (opens in new tab)"
  >
    <Picture
      src={LogoNorraSkog}
      alt=""
      id="clientLogo4"
      height={32}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://lastbilsstation.se/index.html?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="lastbilsstation"
    data-ga4-event="client_click"
    data-ga4-client="lastbilsstation"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Skellefteå Lastbilsstation's website (opens in new tab)"
  >
    <Picture
      src={LogoLastbilsstation}
      alt=""
      id="clientLogo5"
      height={32}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://producenterna.se/"
    data-umami-event="Client Click"
    data-umami-client="producenterna"
    data-ga4-event="client_click"
    data-ga4-client="producenterna"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit Producenterna's website (opens in new tab)"
  >
    <Picture
      src={LogoProducenterna}
      alt=""
      id="clientLogo6"
      height={32}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://extenseit.se/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="extenseit"
    data-ga4-event="client_click"
    data-ga4-client="extenseit"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit ExtenseIT's website (opens in new tab)"
  >
    <Picture
      src={LogoExtenseIT}
      alt=""
      id="clientLogo7"
      height={20}
      class="opacity-0"
      role="img"
    />
  </a>
  <a
    href="https://www.24vision.se/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=client_showcase"
    data-umami-event="Client Click"
    data-umami-client="24vision"
    data-ga4-event="client_click"
    data-ga4-client="24vision"
    target="_blank"
    rel="noopener noreferrer"
    class="focus:ring-primary-500 rounded-lg p-2 transition duration-150 hover:opacity-75 focus:outline-none focus:ring-2 active:opacity-50"
    aria-label="Visit 24vision's website (opens in new tab)"
  >
    <Picture
      src={Logo24vision}
      alt=""
      id="clientLogo8"
      height={32}
      class="opacity-0"
      role="img"
    />
  </a>
</section>

<script>
  document.addEventListener(
    "astro:page-load",
    () => {
      gsap.set(
        [
          "#clientLogo1",
          "#clientLogo2",
          "#clientLogo3",
          "#clientLogo4",
          "#clientLogo5",
          "#clientLogo6",
          "#clientLogo7",
          "#clientLogo8",
        ],
        {
          opacity: 1,
        },
      );
      gsap.from(
        [
          "#clientLogo1",
          "#clientLogo2",
          "#clientLogo3",
          "#clientLogo4",
          "#clientLogo5",
          "#clientLogo6",
          "#clientLogo7",
          "#clientLogo8",
        ],
        {
          y: 15,
          opacity: 0,
          duration: 0.5,
          ease: "power2.out",
          stagger: 0.25,
        },
      );
    },
    { once: false },
  );
</script>
