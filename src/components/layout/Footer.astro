---
import { Image } from "astro:assets";
import { GIT_HASH } from "astro:env/client";
import { getRelativeLocaleUrl } from "astro:i18n";
import ImgAvatar from "../../assets/images/avatar.jpeg";

const translations = {
  en: {
    title: "Photographer & Designer",
    alt: "Portrait of William Hallin",
    navTitle: "Explore",
  },
  sv: {
    title: "Fotograf & Designer",
    alt: "Portr√§tt av William Hallin",
    navTitle: "Utforska",
  },
};
---

<footer class="mt-12 flex flex-col gap-8">
  <hr class="border-stone-300" />
  <div class="flex flex-col gap-8 md:justify-between">
    <nav class="flex justify-between gap-4 font-serif selection:bg-red-300 selection:text-red-800">
      <h3 class="text-sm font-medium text-stone-700">
        {translations[Astro.currentLocale].navTitle}
      </h3>
      <menu class="flex flex-wrap justify-end gap-2 text-sm font-light text-stone-500">
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "/")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/home</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "portfolio")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/portfolio</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "clients")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/clients</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "contact")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/contact</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "faq")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/faq</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "blog")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/blog</a
        >
        <a
          href={getRelativeLocaleUrl(`${Astro.currentLocale}`, "legal")}
          class="underline decoration-dashed decoration-from-font underline-offset-4 hover:bg-red-500 hover:text-stone-50 hover:no-underline active:opacity-50"
          >/legal</a
        >
      </menu>
    </nav>

    <address class="flex flex-col justify-between gap-4 sm:flex-row sm:items-center">
      <figure class="flex items-center gap-4 font-serif">
        <Image
          src={ImgAvatar}
          alt={translations[Astro.currentLocale].alt}
          width="128"
          height="128"
          class="h-8 w-8 rounded-full border border-stone-300 object-cover drop-shadow-xs select-none"
        />
        <figcaption class="flex flex-col selection:bg-red-300 selection:text-red-800">
          <span class="font-medium">William Hallin</span>
          <span class="text-sm font-light text-stone-700 italic">
            {translations[Astro.currentLocale].title}
          </span>
        </figcaption>
      </figure>
      <div class="flex flex-col gap-2 sm:items-end">
        <menu class="flex flex-wrap gap-2 font-serif text-sm sm:justify-end">
          <a
            href="mailto:william@hallin.media?subject=Hey!"
            class="underline decoration-amber-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-amber-300 selection:text-amber-700 hover:bg-amber-500 hover:text-amber-100 active:opacity-50"
            >mailto:</a
          >
          <a
            href="tel:+46706159279"
            class="underline decoration-red-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-red-300 selection:text-red-800 hover:bg-red-500 hover:text-red-100 active:opacity-50"
            >tel:</a
          >
          <a
            href="https://www.instagram.com/williamhallin"
            target="_blank"
            class="underline decoration-pink-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-pink-300 selection:text-pink-700 hover:bg-pink-500 hover:text-pink-100 active:opacity-50"
            >instagram</a
          >
          <a
            href="https://www.linkedin.com/in/williamhallin"
            target="_blank"
            class="underline decoration-blue-500 decoration-dashed decoration-from-font underline-offset-4 selection:bg-blue-300 selection:text-blue-700 hover:bg-blue-500 hover:text-blue-100 active:opacity-50"
            >linkedin</a
          >
        </menu>
        <div class="flex items-center gap-2">
          <a
            href="https://github.com/whallin/hallinmedia-website"
            target="_blank"
            class="font-mono text-xs font-light text-stone-500 selection:bg-stone-300 selection:text-stone-700 hover:bg-stone-500 hover:text-stone-100 active:opacity-50"
            >{GIT_HASH}</a
          >
        </div>
      </div>
    </address>
  </div>
</footer>
