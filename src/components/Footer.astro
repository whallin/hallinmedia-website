---
import { Picture } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";
import HallinmediaWordmarkVertical from "../assets/brand/wordmark-vertical.svg";
import PhEnvelopeSimpleDuotone from "./icon/PhEnvelopeSimpleDuotone.astro";
import PhBehanceLogoDuotone from "./icon/brands/PhBehanceLogoDuotone.astro";
import PhInstagramLogoDuotone from "./icon/brands/PhInstagramLogoDuotone.astro";
import PhYoutubeLogoDuotone from "./icon/brands/PhYoutubeLogoDuotone.astro";
---

<hr
  class="my-12 border-t-[0.5px] border-stone-300"
  transition:animate="none"
  aria-hidden="true"
/>

<footer
  class="mb-12 flex flex-col items-center gap-4 sm:flex-row sm:justify-between"
  transition:animate="none"
  role="contentinfo"
>
  <div class="flex flex-col items-center gap-4 sm:flex-row">
    <a
      href={getRelativeLocaleUrl(Astro.currentLocale ?? "en", "/")}
      aria-label="Return to HallinMedia homepage"
    >
      <Picture
        src={HallinmediaWordmarkVertical}
        alt="HallinMedia logo"
        width={64}
        class="select-none transition duration-200 hover:opacity-75 active:opacity-50"
      />
    </a>
    <div
      class="flex flex-col items-center gap-1 py-2 text-stone-500 sm:items-start sm:py-0"
    >
      <p class="text-sm">
        A <a
          href="https://newgent.digital/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=footer_brand"
          data-umami-event="Brand Click"
          data-umami-brand="newgent"
          data-ga4-event="brand_click"
          data-ga4-brand="newgent"
          target="_blank"
          rel="noopener noreferrer"
          class="underline underline-offset-4 transition duration-200 hover:opacity-75 active:opacity-50"
          aria-label="Visit newgent.digital website (opens in new tab)"
          >newgent.digital</a
        > brand.
      </p>
      <a
        href="https://github.com/whallin/hallinmedia-website/?utm_source=hallinmedia&utm_medium=referral&utm_campaign=footer_source"
        data-umami-event="Source Click"
        data-umami-source="github"
        data-ga4-event="source_click"
        data-ga4-source="github"
        target="_blank"
        rel="noopener noreferrer"
        class="duration text-xs underline underline-offset-2 transition hover:opacity-75 active:opacity-50"
        aria-label="View source code on GitHub (opens in new tab)"
        >Utvecklad med ‚ù§ av er alldeles egna</a
      >
    </div>
  </div>
  <nav class="flex gap-2 text-red-400" aria-label="Social media links">
    <a
      href="mailto:william@hallin.media"
      aria-label="Contact William Hallin via email"
      data-umami-event="Contact Click"
      data-umami-channel="email"
      data-ga4-event="contact_click"
      data-ga4-channel="email"
      class="inline-flex items-center justify-center"
    >
      <PhEnvelopeSimpleDuotone
        class="h-6 w-6 transition duration-200 hover:opacity-75 active:opacity-50"
      />
    </a>
    <a
      href="https://www.instagram.com/williamhallinn/?utm_source=hallinmedia&utm_medium=social&utm_campaign=footer_social"
      aria-label="Follow William Hallin on Instagram (opens in new tab)"
      data-umami-event="Social Click"
      data-umami-channel="instagram"
      data-ga4-event="social_click"
      data-ga4-channel="instagram"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center"
    >
      <PhInstagramLogoDuotone
        class="h-6 w-6 transition duration-200 hover:opacity-75 active:opacity-50"
      />
    </a>
    <a
      href="https://www.youtube.com/@HallinMedia/?utm_source=hallinmedia&utm_medium=social&utm_campaign=footer_social"
      aria-label="Subscribe to William Hallin on YouTube (opens in new tab)"
      data-umami-event="Social Click"
      data-umami-channel="youtube"
      data-ga4-event="social_click"
      data-ga4-channel="youtube"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center"
    >
      <PhYoutubeLogoDuotone
        class="h-6 w-6 transition duration-200 hover:opacity-75 active:opacity-50"
      />
    </a>
    <a
      href="https://www.behance.net/whallin/?utm_source=hallinmedia&utm_medium=social&utm_campaign=footer_social"
      aria-label="View William Hallin's work on Behance (opens in new tab)"
      data-umami-event="Social Click"
      data-umami-channel="behance"
      data-ga4-event="social_click"
      data-ga4-channel="behance"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center"
    >
      <PhBehanceLogoDuotone
        class="h-6 w-6 transition duration-200 hover:opacity-75 active:opacity-50"
      />
    </a>
  </nav>
</footer>
