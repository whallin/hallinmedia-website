---
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";
import Button from "../../components/common/Button.astro";
import ContactForm from "../../components/form/ContactForm.astro";
import ClientBar from "../../components/sections/ClientBar.astro";
import FAQList from "../../components/sections/FAQList.astro";
import FeaturedServices from "../../components/sections/FeaturedServices.astro";
import ProcessSection from "../../components/sections/ProcessSection.astro";
import StatsSection from "../../components/sections/StatsSection.astro";
import TestimonialsSection from "../../components/sections/TestimonialsSection.astro";
import Layout from "../../layouts/Layout.astro";

const locale = Astro.currentLocale === "en" || Astro.currentLocale === "sv" ? Astro.currentLocale : "en";
---

<Layout
  title="Hire a digital creator for your project"
  description="Looking for expertise in design, photography and web? With over 4 years of experience, I help you from concept to finished product. Check out my services and let's create something unique together."
  header="Hire me"
  headerIcon="ph:handshake-duotone"
  headerDescription="Looking for an experienced creator for your next project? With over 4+ years of experience in design, photography and web, I will help you from idea to finished product. Discover my services, work process and what past clients say â€” and let's create something extraordinary together."
>
  <div class="mx-auto max-w-2xl space-y-16">
    <FeaturedServices />
    <StatsSection />
    <ProcessSection />
    <ClientBar />
    <TestimonialsSection />
    <section class="space-y-8">
      <header class="relative text-stone-700 dark:text-stone-100">
        <h2 class="relative font-serif text-2xl font-semibold text-stone-700 dark:text-stone-100">
          <span class="relative z-10 inline-flex flex-col gap-2 bg-amber-50 pr-4 dark:bg-stone-900">
            Start a project today
          </span>
          <span class="absolute top-1/2 right-0 left-0 -z-0 h-px bg-stone-200 dark:bg-stone-700" aria-hidden="true"
          ></span>
        </h2>
      </header>
      <div class="rounded-lg border border-stone-200 p-6 dark:border-stone-700">
        <ContactForm />
      </div>
    </section>
    <section class="space-y-8">
      <header class="relative text-stone-700 dark:text-stone-100">
        <h2 class="relative font-serif text-2xl font-semibold text-stone-700 dark:text-stone-100">
          <span class="relative z-10 inline-flex flex-col gap-2 bg-amber-50 pr-4 dark:bg-stone-900">
            Frequently asked questions
          </span>
          <span class="absolute top-1/2 right-0 left-0 -z-0 h-px bg-stone-200 dark:bg-stone-700" aria-hidden="true"
          ></span>
        </h2>
      </header>
      <FAQList showHeadings={false} showFeaturedFirst={true} maxItems={5} />
      <Button variant="secondary" href={getRelativeLocaleUrl(locale, "faq")}>
        <Icon name="ph:question-duotone" class="flex-shrink-0" aria-hidden="true" />
        See all questions and answers
        <Icon name="ph:arrow-right" class="flex-shrink-0" aria-hidden="true" />
      </Button>
    </section>
  </div>
</Layout>
