---
import { Icon } from "astro-icon/components";
import Button from "../components/Button.astro";
import Notice from "../components/Notice.astro";
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="UI Kit"
  description="A UI kit showcasing components and design elements for hallin.media."
  article={false}
  icon="ph:palette-duotone"
>
  <main
    class="container mx-auto max-w-7xl bg-stone-50 px-4 py-8 dark:bg-stone-950"
  >
    <!-- Theme Switcher -->
    <div class="mb-8 flex justify-end">
      <ThemeSwitcher />
    </div>

    <!-- Typography -->
    <section class="mb-16">
      <h2
        class="mb-6 text-2xl font-semibold text-stone-900 dark:text-stone-100"
      >
        Typography
      </h2>
      <div class="space-y-4">
        <div>
          <h1 class="text-4xl font-semibold text-stone-900 dark:text-stone-100">
            Heading 1 - DM Sans
          </h1>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-sans font-semibold text-4xl
          </p>
        </div>
        <div>
          <h2 class="text-3xl font-semibold text-stone-900 dark:text-stone-100">
            Heading 2 - DM Sans
          </h2>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-sans font-semibold text-3xl
          </p>
        </div>
        <div>
          <h3 class="font-serif text-2xl text-stone-900 dark:text-stone-100">
            Heading 3 - DM Serif Text
          </h3>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-serif text-2xl
          </p>
        </div>
        <div>
          <h4 class="font-serif text-xl text-stone-900 dark:text-stone-100">
            Heading 4 - DM Serif Text
          </h4>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-serif text-xl
          </p>
        </div>
        <div>
          <p class="text-base text-stone-900 dark:text-stone-100">
            Body Text - DM Sans Regular
          </p>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-sans text-base
          </p>
        </div>
        <div>
          <p class="text-sm text-stone-900 dark:text-stone-100">
            Small Text - DM Sans Regular
          </p>
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-sans text-sm
          </p>
        </div>
        <div>
          <code class="font-mono text-base text-stone-900 dark:text-stone-100"
            >Monospace - DM Mono</code
          >
          <p class="text-sm text-stone-500 dark:text-stone-400">
            font-mono text-base
          </p>
        </div>
      </div>
    </section>

    <!-- Colors -->
    <section class="mb-16">
      <h2
        class="mb-6 text-2xl font-semibold text-stone-900 dark:text-stone-100"
      >
        Colors
      </h2>
      <div class="space-y-8">
        <!-- Primary Colors -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Primary
          </h3>
          <div class="grid grid-cols-2 gap-4 md:grid-cols-6">
            {
              [
                "50",
                "100",
                "200",
                "300",
                "400",
                "500",
                "600",
                "700",
                "800",
                "900",
                "950",
              ].map((shade) => (
                <div class="space-y-2">
                  <div class={`h-20 rounded-lg bg-live-${shade}`} />
                  <p class="font-mono text-sm text-stone-500">live-{shade}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Grayscale -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Grayscale
          </h3>
          <div class="grid grid-cols-2 gap-4 md:grid-cols-6">
            {
              [
                "50",
                "100",
                "200",
                "300",
                "400",
                "500",
                "600",
                "700",
                "800",
                "900",
                "950",
              ].map((shade) => (
                <div class="space-y-2">
                  <div class={`h-20 rounded-lg bg-stone-${shade}`} />
                  <p class="font-mono text-sm text-stone-500">stone-{shade}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons -->
    <section class="mb-16">
      <h2
        class="mb-6 text-2xl font-semibold text-stone-900 dark:text-stone-100"
      >
        Buttons
      </h2>
      <div class="space-y-8">
        <!-- Primary Buttons -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Primary
          </h3>
          <div class="flex flex-wrap gap-4">
            <Button>Primary Button</Button>
            <Button disabled>Disabled</Button>
            <Button>
              With Icon
              <Icon name="ph:arrow-right-bold" />
            </Button>
          </div>
        </div>

        <!-- Secondary Buttons -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Secondary
          </h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="secondary">Secondary Outlined</Button>
            <Button variant="secondary" disabled>Disabled Outlined</Button>
            <Button variant="secondary">
              With Icon
              <Icon name="ph:arrow-right-bold" />
            </Button>
          </div>
        </div>

        <!-- Plain Buttons -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Plain
          </h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="plain">Plain Filled</Button>
            <Button variant="plainSecondary">Plain Outlined</Button>
            <Button variant="plain" disabled>Disabled Filled</Button>
            <Button variant="plainSecondary" disabled>Disabled Outlined</Button>
            <Button variant="plain">
              With Icon
              <Icon name="ph:arrow-right-bold" />
            </Button>
            <Button variant="plainSecondary">
              With Icon
              <Icon name="ph:arrow-right-bold" />
            </Button>
          </div>
        </div>

        <!-- White Buttons (on dark background) -->
        <div class="rounded-lg bg-stone-900 p-8">
          <h3 class="mb-4 font-serif text-xl text-stone-100">White Variants</h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="white">White Button</Button>
            <Button variant="white" disabled>Disabled</Button>
            <Button variant="whiteSecondary">White Secondary</Button>
            <Button variant="whiteSecondary" disabled>Disabled</Button>
          </div>
        </div>

        <!-- Black Buttons (on light background) -->
        <div class="rounded-lg bg-stone-100 p-8">
          <h3 class="mb-4 font-serif text-xl text-stone-900">Black Variants</h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="black">Black Button</Button>
            <Button variant="black" disabled>Disabled</Button>
            <Button variant="blackSecondary">Black Secondary</Button>
            <Button variant="blackSecondary" disabled>Disabled</Button>
          </div>
        </div>

        <!-- Button Sizes -->
        <div>
          <h3
            class="mb-4 font-serif text-xl text-stone-900 dark:text-stone-100"
          >
            Sizes
          </h3>
          <div class="flex items-end gap-4">
            <Button size="sm">Small</Button>
            <Button size="md">Medium</Button>
            <Button size="lg">Large</Button>
            <Button size="lg" class="flex w-full justify-center"
              >Full Width</Button
            >
          </div>
        </div>
      </div>
    </section>

    <!-- Notices -->
    <section class="mb-16">
      <h2
        class="mb-6 text-2xl font-semibold text-stone-900 dark:text-stone-100"
      >
        Notices
      </h2>
      <div class="space-y-8">
        <Notice variant="default" icon="ph:info-duotone"
          >Default variant - A simple notice without any specific context</Notice
        >

        <Notice variant="info" icon="ph:info-duotone">
          Info variant - Used for general information and helpful tips
        </Notice>

        <Notice variant="warning" icon="ph:warning-duotone">
          Warning variant - Used for important warnings that require attention
        </Notice>

        <Notice variant="error" icon="ph:x-bold">
          Error variant - Used for critical errors or issues that need immediate
          attention
        </Notice>

        <Notice variant="success" icon="ph:checks-bold">
          Success variant - Used to confirm successful actions or positive
          outcomes
        </Notice>

        <Notice variant="note" icon="ph:note-duotone">
          Note variant - Used for additional context or side notes
        </Notice>

        <Notice variant="quote" icon="ph:quotes-duotone">
          Quote variant - Used for highlighting quotes or important statements
        </Notice>
      </div>
    </section>
  </main>
</BaseLayout>
